            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dimen_14sp"
            tools:text="空气质量指数：80" />
    </RelativeLayout>

