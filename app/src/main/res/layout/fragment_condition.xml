    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp">


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dimen_14sp"
            tools:text="2021-12-11" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/temper"
            android:layout_alignStart="@+id/temper"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dimen_14sp"
            tools:text="晴" />

        <TextView
            android:id="@+id/wid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dimen_14sp"
            tools:text="晴" />

        <TextView
            android:id="@+id/temper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/colorBlue"
            android:textSize="36sp"
            tools:text="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/temper"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/temper"
            android:text="°C"
            android:textColor="@color/colorBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/wid"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dimen_14sp"
            tools:text="湿度：82" />

        <TextView
            android:id="@+id/direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/power"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/dimen_14sp"
            tools:text="风向：西北风" />

        <TextView
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

